{
  "manifest_version": 3,
  "name": "Consumed",
  "version": "1.0.0",
  "description": "Transform prices into work hours on Greek ecommerce sites. Make smarter purchasing decisions with this reality check extension.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.skroutz.gr/*",
    "https://www.public.gr/*",
    "https://www.plaisio.gr/*",
    "https://www.kotsovolos.gr/*",
    "https://www.mediamarkt.gr/*",
    "https://www.e-shop.gr/*",
    "https://www.sklavenitis.gr/*",
    "https://www.praktiker.gr/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.skroutz.gr/*",
        "https://www.public.gr/*",
        "https://www.plaisio.gr/*",
        "https://www.kotsovolos.gr/*",
        "https://www.mediamarkt.gr/*",
        "https://www.e-shop.gr/*",
        "https://www.sklavenitis.gr/*",
        "https://www.praktiker.gr/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Consumed"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/consumedlogo.png",
    "48": "icons/consumedlogo.png",
    "128": "icons/consumedlogo.png"
  }
} 